generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  dailyInspections DailyInspection[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  @@map("users")
}

model DailyInspection {
  id                   String      @id @default(uuid())
  animal_id            String      @unique
  inspection_date      DateTime
  animal_weight        Float
  drug_name            String
  dosage               String
  food_given           String
  balance_food_take_out String
  dopping_consistency  String
  animal_behavior      String
  userId               String
  user                 User        @relation(fields: [userId], references: [id])

  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt

  @@map("daily_inspections")
}

model Scientific {
  id                   String   @id @default(uuid())
  animal_id            String   @unique
  animal_type          String
  common_name          String
  cage_number          String
  sex                  String
  reason_for_admission String
  date_of_entry        DateTime
  date_of_discharge    DateTime?

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  @@map("scientific")
}

model Laboratorium {
  id          String   @id @default(uuid())
  test_type   String
  diagnosis   String
  attachment_file String
  test_date  DateTime
  description String
  drug_name   String
  animal_id  String   @unique

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("laboratorium")
}